@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index page";
}

<!-- Container for the entire index page content -->
<div class="container hero-index-container">

    <!-- Top Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Create New Hero -->
        <a class="btn btn-primary" asp-page="Create">
            Create New Hero
        </a>

        <!-- Compare Superheroes -->
        <a class="btn btn-terciary" asp-page="Compare">
            Compare Superheroes
        </a>
    </div>

    <!-- Table displaying all superheroes -->
    <table class="table hero-table">
        <thead>
            <tr>
                <th class="hero-title-header">Superhero Name</th>
                <th class="hero-action-header">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr class="hero-row">
                    <td>@product.Title</td>
                    <td>
                        <a class="btn btn-primary" asp-page="Read" asp-route-id="@product.Id">Read</a>
                        <a class="btn btn-primary" asp-page="Update" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-primary" asp-page="Delete" asp-route-id="@product.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Show a success popup if a superhero was deleted -->
@if (TempData["ShowPopup"] != null)
{
    <div id="popup-overlay" class="popup-overlay">
        <div class="popup-modal">
            <p class="popup-message">Superhero deleted successfully!</p>
            <button onclick="closePopup()" class="popup-close">OK</button>
        </div>
    </div>

    <script>
        function closePopup() {
            document.getElementById('popup-overlay').style.display = 'none';
        }
    </script>
}

<!-- Slider JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sliders = document.querySelectorAll('.slider');
        sliders.forEach(function (slider) {
            const valueDisplay = slider.nextElementSibling;
            slider.value = 0;

            function updateSliderValue() {
                valueDisplay.textContent = slider.value;
            }

            slider.addEventListener('input', function () {
                updateSliderValue();
            });

            updateSliderValue();
        });
    });
</script>