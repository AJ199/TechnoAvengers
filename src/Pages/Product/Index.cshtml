@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index page";
}

<!-- Container for the entire index page content -->
<div class="container hero-index-container">

    <div class="container mb-5">
        <div class="row text-center g-4">

            <!-- Create New Hero -->
            <div class="col-md-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Create New Hero</h5>
                        <p class="card-text">Add a brand-new superhero to your roster by filling out the creation form.</p>
                        <a class="btn btn-primary" asp-page="Create">Create</a>
                    </div>
                </div>
            </div>

            <!-- Compare Heroes -->
            <div class="col-md-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Compare Heroes</h5>
                        <p class="card-text">Choose two superheroes to compare their abilities side-by-side.</p>
                        <a class="btn btn-secondary" asp-page="Compare">Compare</a>
                    </div>
                </div>
            </div>

            <!-- Battle Heroes -->
            <div class="col-md-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Battle Heroes</h5>
                        <p class="card-text">Select two heroes and find out who would win in an epic showdown.</p>
                        <a class="btn btn-danger" asp-page="Battle">Battle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>



    <!-- Table displaying all superheroes -->
    <table class="table hero-table">
        <thead>
            <tr>
                <th class="hero-title-header">
                    <a asp-page="./Index"
                       asp-route-SortField="Title"
                       asp-route-SortOrder="@(Request.Query["SortField"] == "Title" && Request.Query["SortOrder"] == "asc" ? "desc" : "asc")"
                       style="text-decoration:none; color:inherit;"
                       title="Click to sort by superhero name">
                        Superhero Name
                        <span style="font-size: 0.8em;">
                            @{
                                var sortField = (string)Request.Query["SortField"];
                                var sortOrder = (string)Request.Query["SortOrder"];

                                var isSortedByTitle = sortField == "Title";
                                var icon = "⇅"; // Default sort icon

                                if (isSortedByTitle && sortOrder == "asc")
                                {
                                    icon = "▲";
                                }

                                if (isSortedByTitle && sortOrder == "desc")
                                {
                                    icon = "▼";
                                }

                                @icon
                            }
                        </span>
                    </a>
                </th>
                <th class="hero-action-header">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr class="hero-row">
                    <td>@product.Title</td>
                    <td>
                        <a class="btn btn-primary" asp-page="Read" asp-route-id="@product.Id">Read</a>
                        <a class="btn btn-primary" asp-page="Update" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-primary" asp-page="Delete" asp-route-id="@product.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Show a success popup if a superhero was deleted -->
@if (TempData["ShowPopup"] != null)
{
    <div id="popup-overlay" class="popup-overlay">
        <div class="popup-modal">
            <p class="popup-message">Superhero deleted successfully!</p>
            <button onclick="closePopup()" class="popup-close">OK</button>
        </div>
    </div>

    <script>
        function closePopup() {
            document.getElementById('popup-overlay').style.display = 'none';
        }
    </script>
}