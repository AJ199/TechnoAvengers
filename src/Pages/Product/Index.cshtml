@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel

@{
	ViewData["Title"] = "Index page";
}

<style>
    .container {
        margin-top: 50px;
    }

    .custom-table {
        background-color: rgba(0, 0, 0, 0.7); /* semi-transparent black */
        color: #fff; /* white text */
        border-radius: 10px;
        overflow: hidden;
    }

        .custom-table th, .custom-table td {
            padding: 15px;
            text-align: center;
            vertical-align: middle;
        }

        .custom-table th {
            background-color: rgba(0, 0, 0, 0.7); /* semi-transparent black for header */
            font-weight: bold;
        }

        .custom-table tr:hover {
            background-color: rgba(255, 255, 255, 0.1); /* light highlight on hover */
        }


</style>


<div class="container">
    <table class="table custom-table">
        <thead>
            <tr>
                <th style="width: 40%;">Title</th>
                <th style="width: 20%;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Title</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
