@page "{hero1Id}/{hero2Id}"
@model ContosoCrafts.WebSite.Pages.Product.CompareResultModel
@{
    ViewData["Title"] = "Superhero Showdown";
}

<div class="compare-wrapper">
    <h2 class="text-center compare-heading">SUPERHERO SHOWDOWN</h2>

    <div class="row justify-content-center text-center compare-grid">
        <div class="col-md-5">
            <img src="@Model.Hero1.ImageUrl" alt="@Model.Hero1.Title" class="img-fluid rounded shadow hero-img" />
            <h3 class="hero-name">@Model.Hero1.Title</h3>
            <div class="stat-box">Power: <span>@Model.Hero1.Power</span></div>
            <div class="stat-box">Speed: <span>@Model.Hero1.Speed</span></div>
            <div class="stat-box">Strength: <span>@Model.Hero1.Strength</span></div>
            <div class="stat-box">Intelligence: <span>@Model.Hero1.Intelligence</span></div>
            <div class="stat-box">Durability: <span>@Model.Hero1.Durability</span></div>
            <div class="stat-box">Combat: <span>@Model.Hero1.Combat</span></div>
        </div>

        <div class="col-md-5">
            <img src="@Model.Hero2.ImageUrl" alt="@Model.Hero2.Title" class="img-fluid rounded shadow hero-img" />
            <h3 class="hero-name">@Model.Hero2.Title</h3>
            <div class="stat-box">Power: <span>@Model.Hero2.Power</span></div>
            <div class="stat-box">Speed: <span>@Model.Hero2.Speed</span></div>
            <div class="stat-box">Strength: <span>@Model.Hero2.Strength</span></div>
            <div class="stat-box">Intelligence: <span>@Model.Hero2.Intelligence</span></div>
            <div class="stat-box">Durability: <span>@Model.Hero2.Durability</span></div>
            <div class="stat-box">Combat: <span>@Model.Hero2.Combat</span></div>
        </div>
    </div>
</div>
