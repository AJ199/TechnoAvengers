@page
@model ContosoCrafts.WebSite.Pages.Product.CompareModel
@{
    ViewData["Title"] = "Compare Superheroes";
}

<div class="container hero-index-container mt-5 mb-5 text-white">
    <h2 class="text-center mb-5" style="font-family: 'Bangers', cursive; font-size: 3rem; color: #ff1c1c; text-shadow: 0 0 10px #ff1c1c;">
        Compare Two Superheroes
    </h2>

    <!-- Hero Selection Form -->
    <form method="post" class="compare-form">
        <div class="form-group mb-4">
            <label for="hero1" class="form-label" style="font-weight: bold;">Select First Superhero</label>
            <select class="form-control compare-select" id="hero1" name="Hero1Id" required>
                <option value="">-- Choose Hero 1 --</option>
                @foreach (var hero in Model.Products)
                {
                    <option value="@hero.Id">@hero.Title</option>
                }
            </select>
        </div>

        <div class="form-group mb-4">
            <label for="hero2" class="form-label" style="font-weight: bold;">Select Second Superhero</label>
            <select class="form-control compare-select" id="hero2" name="Hero2Id" required>
                <option value="">-- Choose Hero 2 --</option>
                @foreach (var hero in Model.Products)
                {
                    <option value="@hero.Id">@hero.Title</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-terciary" style="padding: 10px 30px; font-size: 1.5rem;">
                Compare
            </button>
        </div>
    </form>

    @if (Model.Hero1 != null && Model.Hero2 != null)
    {
        <hr class="my-5" />
        <h3 class="text-center mb-4" style="font-size: 2rem; font-family: 'Bangers', cursive; color: white;">
            ⚡ Power Comparison ⚡
        </h3>

        <div class="row justify-content-center text-center">
            <div class="col-md-5 mb-4">
                <h4 style="font-family: 'Bangers', cursive; font-size: 2rem; color: #ffcc00;">@Model.Hero1.Title</h4>
                <div class="stat-card">Power: @Model.Hero1.Power</div>
                <div class="stat-card">Speed: @Model.Hero1.Speed</div>
                <div class="stat-card">Strength: @Model.Hero1.Strength</div>
                <div class="stat-card">Intelligence: @Model.Hero1.Intelligence</div>
            </div>

            <div class="col-md-5 mb-4">
                <h4 style="font-family: 'Bangers', cursive; font-size: 2rem; color: #ffcc00;">@Model.Hero2.Title</h4>
                <div class="stat-card">Power: @Model.Hero2.Power</div>
                <div class="stat-card">Speed: @Model.Hero2.Speed</div>
                <div class="stat-card">Strength: @Model.Hero2.Strength</div>
                <div class="stat-card">Intelligence: @Model.Hero2.Intelligence</div>
            </div>
        </div>
    }
</div>
