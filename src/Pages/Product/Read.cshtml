@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}

<div class="hero-read-container">
    <div class="hero-read-card">
        <h1 class="hero-read-title">@Model.Product.Title</h1>

        <div class="hero-read-content">
            <img class="hero-read-image" src='@Model.Product.ImageUrl' alt='Image for @Model.Product.Title' />

            <div class="hero-read-details">

                <div class="hero-read-stats">
                    <p class="hero-read-text stats-title">Power Statistics</p>
                    <ul class="hero-read-list">
                        <li class="hero-read-list-item">Intelligence: @Model.Product.Intelligence</li>
                        <li class="hero-read-list-item">Strength: @Model.Product.Strength</li>
                        <li class="hero-read-list-item">Speed: @Model.Product.Speed</li>
                        <li class="hero-read-list-item">Durability: @Model.Product.Durability</li>
                        <li class="hero-read-list-item">Power: @Model.Product.Power</li>
                        <li class="hero-read-list-item">Combat: @Model.Product.Combat</li>
                    </ul>
                </div>

                <p class="hero-read-text">Real name: @Model.Product.Fullname</p>
                <p class="hero-read-text">Birthplace: @Model.Product.Birthplace</p>
                <p class="hero-read-text">Work: @Model.Product.Work</p>
                <p class="hero-read-text">First Appearance: @Model.Product.FirstAppear</p>

                <!-- Action buttons with uniform size and alignment -->
                <div class="form-actions button-row">
                    <a class="btn btn-primary uniform-button" asp-page="Update" asp-route-id="@Model.Product.Id">
                        <span class="btn-text">Edit</span>
                    </a>
                    <a class="btn btn-secondary uniform-button" asp-page="/Product/Index">
                        <span class="btn-text">Go Back</span>
                    </a>
                    <a class="btn btn-confirm uniform-button" asp-page="Delete" asp-route-id="@Model.Product.Id">
                        <span class="btn-text">Delete</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
