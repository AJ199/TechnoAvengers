@page
@model ContosoCrafts.WebSite.Pages.Product.CreateModel
@{
    ViewData["Title"] = "Create";
}

<style>
    .form-container {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 40px auto;
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 8px;
            border: none;
            border-radius: 5px;
            background-color: #222;
            color: white;
        }

        .form-group span {
            color: red;
            font-size: 0.9em;
        }

    .btn-submit {
        background-color: #ffcc00;
        color: black;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #e6b800;
        }

    .slider-container {
        margin-top: 10px;
    }

    .slider-values {
        margin: 5px;
        font-size: 1.1em;
    }
</style>

<!-- Back Button -->
<div>
    <a href="@Url.Page("/Product/Index")" class="btn btn-primary">
        ← Back to Superheroes
    </a>
</div>

<div class="form-container">
    <h2>Create New Hero</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Title -->
        <div class="form-group">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" />
            <span asp-validation-for="Product.Title"></span>
        </div>

        <!-- Fullname -->
        <div class="form-group">
            <label asp-for="Product.Fullname"></label>
            <input asp-for="Product.Fullname" />
            <span asp-validation-for="Product.Fullname"></span>
        </div>

        <!-- Birthplace -->
        <div class="form-group">
            <label asp-for="Product.Birthplace"></label>
            <input asp-for="Product.Birthplace" />
            <span asp-validation-for="Product.Birthplace"></span>
        </div>

        <!-- Work -->
        <div class="form-group">
            <label asp-for="Product.Work"></label>
            <input asp-for="Product.Work" />
            <span asp-validation-for="Product.Work"></span>
        </div>

        <!-- First Appearance -->
        <div class="form-group">
            <label asp-for="Product.FirstAppear"></label>
            <input asp-for="Product.FirstAppear" />
            <span asp-validation-for="Product.FirstAppear"></span>
        </div>

        <!-- Image URL -->
        <div class="form-group">
            <label asp-for="Product.ImageUrl"></label>
            <input asp-for="Product.ImageUrl" />
            <span asp-validation-for="Product.ImageUrl"></span>
        </div>

        <!-- Role Dropdown -->
        <div class="form-group">
            <label asp-for="Product.Role">Role</label>
            <select asp-for="Product.Role" class="form-control">
                <option value="Unknown">Unknown</option>
                <option value="Core Avenger">Core Avenger</option>
                <option value="Founding Avenger">Founding Avenger</option>
                <option value="Guardian">Guardian</option>
                <option value="Support">Support</option>
                <option value="Mystic Defender">Mystic Defender</option>
            </select>
            <span asp-validation-for="Product.Role"></span>
        </div>

        <!-- Powerstats Sliders -->
        <h3>Powerstats</h3>
        @foreach (var stat in new[] { "Intelligence", "Strength", "Speed", "Durability", "Power", "Combat" })
        {
            <div class="form-group">
                <label>@stat:</label>
                <div class="slider-container">
                    <input type="range" min="1" max="100" value="50" class="slider" id="@stat" name="@stat" />
                    <span class="slider-values" id="@stat-value">50</span>
                </div>
            </div>
        }

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script>
    // Wait for the DOM to be ready
    document.addEventListener('DOMContentLoaded', function () {
        const sliders = document.querySelectorAll('.slider'); // Select all sliders
        sliders.forEach(function(slider) {
            const valueDisplay = slider.nextElementSibling; // Get the span next to the slider for value display

            // Set the initial slider value to 0
            slider.value = 0;
            valueDisplay.textContent = slider.value; // Set the displayed value

            // Update the displayed value when the slider is moved
            slider.addEventListener('input', function () {
                valueDisplay.textContent = slider.value; // Update the value displayed next to the slider
            });
        });
    });
</script>
