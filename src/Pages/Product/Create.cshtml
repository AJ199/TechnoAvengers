@page
@model ContosoCrafts.WebSite.Pages.Product.CreateModel
@{
    ViewData["Title"] = "Create";
}

<style>
    /* Container for the entire form */
    .form-container {
        background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
        color: white; /* White text color */
        padding: 30px; /* Padding around the form */
        border-radius: 10px; /* Rounded corners */
        max-width: 600px; /* Maximum width of the form */
        margin: 40px auto; /* Center the form with margin on top/bottom */
    }

        /* Form header style */
        .form-container h2 {
            text-align: center; /* Center the title */
            margin-bottom: 20px; /* Space below the title */
            font-family: 'Bangers', cursive; /* Fun, comic-style font */
            font-weight: bold; /* Bold title text */
            color: #ffcc00; /* Bright yellow color */
        }

    /* Group each label/input/select/textarea logically */
    .form-group {
        margin-bottom: 15px; /* Space between fields */
    }

        .form-group label {
            font-weight: bold; /* Emphasize labels */
            display: block; /* Make sure label takes full line */
            margin-bottom: 5px; /* Space below label */
        }

        /* Style all form inputs uniformly */
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 8px; /* Inner spacing */
            border: none; 
            border-radius: 5px; /* Rounded corners */
            background-color: #222; /* Dark background for inputs */
            color: white; /* White text inside inputs */
        }

        /* Validation/error message styling */
        .form-group span {
            color: red; /* Red color for errors or notes */
            font-size: 0.9em; /* Slightly smaller text */
        }

    /* Submit button style */
    .btn-submit {
        background-color: #ffcc00; /* Yellow background */
        color: black; /* Black text */
        border: none; /* No border */
        padding: 10px 20px; /* Size of the button */
        font-weight: bold; /* Bold button text */
        border-radius: 5px; /* Rounded edges */
        cursor: pointer; /* Pointer cursor on hover */
    }

        /* Submit button hover effect */
        .btn-submit:hover {
            background-color: #e6b800; /* Darker yellow on hover */
        }

    /* Wrapper for slider components */
    .slider-container {
        margin-top: 10px; /* Space above slider */
    }

    /* Display current slider values */
    .slider-values {
        margin: 5px; 
        font-size: 1.1em; 
    }
</style>


<!-- Back Button -->
<div>
    <a href="@Url.Page("/Product/Index")" class="btn btn-primary">
        ← Back to Superheroes
    </a>
</div>

<div class="form-container">
    <h2>Create New Hero</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Title -->
        <div class="form-group">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" />
            <span asp-validation-for="Product.Title"></span>
        </div>

        <!-- Fullname -->
        <div class="form-group">
            <label asp-for="Product.Fullname"></label>
            <input asp-for="Product.Fullname" />
            <span asp-validation-for="Product.Fullname"></span>
        </div>

        <!-- Gender Dropdown -->
        <div class="form-group">
            <label asp-for="Product.Gender">Gender</label>
            <select asp-for="Product.Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Product.Gender"></span>
        </div>

        <!-- Role Dropdown -->
        <div class="form-group">
            <label asp-for="Product.Role">Role</label>
            <select asp-for="Product.Role" class="form-control">
                <option value="Core Avenger">Core Avenger</option>
                <option value="Founding Avenger">Founding Avenger</option>
                <option value="Guardian">Guardian</option>
                <option value="Support">Support</option>
                <option value="Mystic Defender">Mystic Defender</option>
            </select>
            <span asp-validation-for="Product.Role"></span>
        </div>

        <!-- Alignment Dropdown -->
        <div class="form-group">
            <label asp-for="Product.Alignment">Alignment</label>
            <select asp-for="Product.Alignment" class="form-control">
                <option value="good">Good</option>
                <option value="bad">Bad</option>
                <option value="neutral">Neutral</option>
            </select>
            <span asp-validation-for="Product.Alignment"></span>
        </div>

        <!-- Birthplace -->
        <div class="form-group">
            <label asp-for="Product.Birthplace"></label>
            <input asp-for="Product.Birthplace" />
            <span asp-validation-for="Product.Birthplace"></span>
        </div>

        <!-- Work -->
        <div class="form-group">
            <label asp-for="Product.Work"></label>
            <input asp-for="Product.Work" />
            <span asp-validation-for="Product.Work"></span>
        </div>

        <!-- First Appearance -->
        <div class="form-group">
            <label asp-for="Product.FirstAppear"></label>
            <input asp-for="Product.FirstAppear" />
            <span asp-validation-for="Product.FirstAppear"></span>
        </div>

        <!-- Image URL -->
        <div class="form-group">
            <label asp-for="Product.ImageUrl"></label>
            <input asp-for="Product.ImageUrl" />
            <span asp-validation-for="Product.ImageUrl"></span>
        </div>

        <!-- Powerstats Sliders -->
        <h3>Powerstats</h3>

        <!-- Intelligence -->
        <div class="form-group">
            <label asp-for="Product.Intelligence">Intelligence:</label>
            <div class="slider-container">
                <input asp-for="Product.Intelligence" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Intelligence-value">0</span>
            </div>
        </div>

        <!-- Strength -->
        <div class="form-group">
            <label asp-for="Product.Strength">Strength:</label>
            <div class="slider-container">
                <input asp-for="Product.Strength" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Strength-value">0</span>
            </div>
        </div>

        <!-- Speed -->
        <div class="form-group">
            <label asp-for="Product.Speed">Speed:</label>
            <div class="slider-container">
                <input asp-for="Product.Speed" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Speed-value">0</span>
            </div>
        </div>

        <!-- Durability -->
        <div class="form-group">
            <label asp-for="Product.Durability">Durability:</label>
            <div class="slider-container">
                <input asp-for="Product.Durability" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Durability-value">0</span>
            </div>
        </div>

        <!-- Power -->
        <div class="form-group">
            <label asp-for="Product.Power">Power:</label>
            <div class="slider-container">
                <input asp-for="Product.Power" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Power-value">0</span>
            </div>
        </div>

        <!-- Combat -->
        <div class="form-group">
            <label asp-for="Product.Combat">Combat:</label>
            <div class="slider-container">
                <input asp-for="Product.Combat" type="range" min="1" max="100" class="slider" />
                <span class="slider-values" id="Combat-value">0</span>
            </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script>
    // Wait for the DOM to be ready
    document.addEventListener('DOMContentLoaded', function () {
        const sliders = document.querySelectorAll('.slider'); // Select all sliders
        sliders.forEach(function(slider) {

            // Find the correct span inside the same .slider-container
            const container = slider.closest('.slider-container');
            const valueDisplay = container.querySelector('.slider-values');

            // Set the initial slider value to 0
            slider.value = 0;
            valueDisplay.textContent = slider.value; // Set the displayed value

            // Update the displayed value when the slider is moved
            slider.addEventListener('input', function () {
                valueDisplay.textContent = slider.value; // Update the value displayed next to the slider
            });
        });
    });
</script>
