@page
@model ContosoCrafts.WebSite.Pages.AboutModel
@{
    ViewData["Title"] = "About Us";
}

<!-- Main container -->
<div class="container mt-5 text-center">

    <!-- Page title -->
    <h1 class="display-3 text-white fw-bold contact-subheading">ABOUT US</h1>
    <p class="lead text-white mt-2">Meet the team behind the Avengers Encyclopedia!</p>

    <!-- WHO WE ARE and WHAT WE DO section -->
    <div class="row mt-5 justify-content-center">
        <!-- WHO WE ARE block -->
        <div class="col-md-5 m-2 p-4 bg-dark bg-opacity-75 rounded-4 text-white shadow-lg">
            <h4 class="text-warning mb-3 contact-subheading">WHO WE ARE</h4>
            <p>
                We are a group of passionate developers and Marvel fans dedicated to building an interactive and engaging encyclopedia about the Avengers and other superheroes.
            </p>
        </div>

        <!-- WHAT WE DO block -->
        <div class="col-md-5 m-2 p-4 bg-dark bg-opacity-75 rounded-4 text-white shadow-lg">
            <h4 class="text-warning mb-3 contact-subheading">WHAT WE DO</h4>
            <p>
                We provide superhero stats, origin stories, and historical context for Marvel characters to entertain and inform fans of all ages.
            </p>
        </div>
    </div>

    <!-- OUR MISSION section -->
    <div class="row mt-4 justify-content-center">
        <div class="col-md-10 p-4 bg-dark bg-opacity-75 rounded-4 text-white shadow-lg">
            <h4 class="text-warning mb-3 contact-subheading">OUR MISSION</h4>
            <p>
                To make superhero knowledge accessible, fun, and beautifully presented on the web.
            </p>
        </div>
    </div>

    <!-- MEET THE TEAM section -->
    <div class="row mt-5 justify-content-center">
        <div class="col-md-10 p-4 bg-dark bg-opacity-75 rounded-4 text-white shadow-lg">
            <h4 class="text-warning mb-4 contact-subheading">MEET THE TEAM</h4>

            <!-- GitHub profile buttons -->
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <a href="https://github.com/AJ199" target="_blank" class="btn btn-outline-light btn-lg rounded-pill px-4">
                    <i class="fab fa-github me-2"></i>Anurag Jindal
                </a>
                <a href="https://github.com/suvathikannan17" target="_blank" class="btn btn-outline-light btn-lg rounded-pill px-4">
                    <i class="fab fa-github me-2"></i>Suvathi Kannan
                </a>
                <a href="https://github.com/luke00101" target="_blank" class="btn btn-outline-light btn-lg rounded-pill px-4">
                    <i class="fab fa-github me-2"></i>Luke McClure
                </a>
                <a href="https://github.com/Mariana-MarquezA" target="_blank" class="btn btn-outline-light btn-lg rounded-pill px-4">
                    <i class="fab fa-github me-2"></i>Mariana Marquez
                </a>
            </div>
        </div>
    </div>

</div> <!-- End of main container -->
